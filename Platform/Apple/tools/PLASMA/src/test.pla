def tens(start)
  word i, pptr

  i = start
  pptr = @print
  repeat
    print:hex(i)
    print:str("   ")
    pptr=>dec(i)
    print:newln()
    i = i / 10
  until i == 0
end
def ascii
  byte i
  i = 32
  while i < 128
    putc(i)
    i = i + 1
  loop
end
